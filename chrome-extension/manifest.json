{
    "manifest_version": 3,
    "name": "Margins - Save to Read Later",
    "version": "1.0.0",
    "description": "Save articles to your Margins reading list with one click. Sync across devices with Google sign-in.",
    "permissions": [
        "activeTab",
        "storage",
        "identity",
        "contextMenus",
        "notifications"
    ],
    "host_permissions": [
        "https://*.firebaseio.com/*",
        "https://*.googleapis.com/*",
        "https://firestore.googleapis.com/*",
        "https://identitytoolkit.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "Save to Margins"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}